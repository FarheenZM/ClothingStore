<p class = "pageHeader">Accessories</p>

<div class = "container">
    <table>
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
        #foreach($accessory in $accessories)
        <tr>
            <td><img src="$accessory.getImage()" alt="$accessory.getTitle()" height="100" width="80" title="$accessory.getTitle()"></td>
            <td>$accessory.getTitle()</td>
            <td>$accessory.getDescription()</td>
            <td>Â£$accessory.getPrice()</td>
            <td><a href="/accessories/$accessory.getId()">Show</a></td>
        </tr>
        #end
    </table>
</div>



