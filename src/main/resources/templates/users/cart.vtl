<div class="container">
    <p class="pageHeader">Shopping Cart</p>
    <table>
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Price</th>
        </tr>
        #foreach($product in $cartProducts)
        <tr>
            <td><img src="$product.getImage()" alt="$product.getTitle()" height="100" width="80"
                     title="$product.getTitle()"></td>
            <td>$product.getTitle()</td>
            <td>Â£$product.getPrice()</td>
            <td>
                <form action="/cart/$product.getId()/remove" method="post">

                    <input type="submit" value="Remove" class="button"/>
                </form>
            </td>
        </tr>
        #end
    </table>
</div>



